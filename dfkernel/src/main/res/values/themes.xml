<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DfkernelAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- app attrs settings -->
        <item name="dfkernelAppMajorColor">@color/dfkernel_majorColor</item>
        <item name="dfkernelAppAssistColor1">@color/dfkernel_assistColor1</item>
        <item name="dfkernelAppAssistColor2">@color/dfkernel_assistColor2</item>
        <item name="dfkernelAppAssistColor3">@color/dfkernel_assistColor3</item>

        <item name="dfkernelAppMajorTextColor">@color/dfkernel_color_333</item>
        <item name="dfkernelAppMinorTextColor">@color/dfkernel_color_666</item>
        <item name="dfkernelAppDescTextColor">@color/dfkernel_color_999</item>

        <item name="dfkernelAppLayoutBackgroundColor">@color/dfkernel_color_F0F3F3</item>

        <item name="dfkernelAppMicroTextSize">10sp</item>
        <item name="dfkernelAppLittleTextSize">12sp</item>
        <item name="dfkernelAppNormalTextSize">16sp</item>
        <item name="dfkernelAppLargeTextSize">20sp</item>
        <item name="dfkernelAppLargestTextSize">24sp</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dfkernel_majorColor</item>
        <item name="colorPrimaryVariant">@color/dfkernel_majorColor</item>
        <item name="colorOnPrimary">@color/dfkernel_color_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dfkernel_assistColor1</item>
        <item name="colorSecondaryVariant">@color/dfkernel_assistColor1</item>
        <item name="colorOnSecondary">@color/dfkernel_color_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/dfkernelAppMajorColor</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/dfkernelAppLayoutBackgroundColor</item>
    </style>

    <!-- 启动页主题 -->
    <style name="DfkernelAppTheme.Splash" parent="DfkernelAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/dfkernel_app_splash_layers</item>
    </style>

    <!-- View 主题 -->
    <style name="DfkernelAppTheme.View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DfkernelAppTheme.View.Match" parent="DfkernelAppTheme.View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DfkernelAppTheme.View.Linear" parent="DfkernelAppTheme.View.Match">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 正常字体, 正常字号, 文字居中显示 主题 -->
    <style name="DfkernelAppTheme.Text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?attr/dfkernelAppNormalTextSize</item>
        <item name="android:textColor">?attr/dfkernelAppMajorTextColor</item>
    </style>

    <!-- 中粗字体, 正常字号, 文字居中显示 主题 -->
    <style name="DfkernelAppTheme.MediumText">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?attr/dfkernelAppNormalTextSize</item>
        <item name="android:textColor">?attr/dfkernelAppMajorTextColor</item>
    </style>

    <!-- Line 主题 -->
    <style name="DfkernelAppTheme.Line" parent="DfkernelAppTheme.View" />

    <style name="DfkernelAppTheme.Line.Horizontal" parent="DfkernelAppTheme.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DfkernelAppTheme.Line.Vertical" parent="DfkernelAppTheme.Line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>